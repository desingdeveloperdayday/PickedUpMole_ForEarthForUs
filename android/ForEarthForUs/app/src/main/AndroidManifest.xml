<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="app.woovictory.forearthforus">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".ForEarthApplication"
            android:allowBackup="true"
            android:icon="@mipmap/for_earth_logo"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/for_earth_logo_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true"
            tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".view.mypage.AlarmActivity"/>
        <activity android:name=".view.mypage.ScrapListActivity"/>
        <activity android:name=".view.mypage.achieve.AchieveListActivity"/>
        <activity android:name=".view.article.detail.ArticleDetailActivity"/>
        <activity android:name=".view.mission.MissionCompleteWriteActivity"/>
        <activity android:name=".view.mission.MissionCompleteActivity"/>
        <activity android:name=".view.main.detail.EarthDetailActivity"/>
        <activity android:name=".view.mission.MissionDetailActivity"/>
        <activity android:name=".view.mission.MissionSelectActivity"/>
        <activity android:name=".view.account.FieldSelectActivity"/>
        <activity android:name=".view.account.SignUpActivity"
                  android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".MainActivity"/>
        <activity android:name=".view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".view.account.LoginActivity">
        </activity>
    </application>

</manifest>