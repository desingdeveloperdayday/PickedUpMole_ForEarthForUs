<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TitleBlackStyle">
        <item name="android:textSize">@dimen/size_text_24dp</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:textColor">@color/fe_fu_black</item>
        <item name="android:fontFamily">@font/notosanscjkkr_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TitleWhiteStyle">
        <item name="android:textSize">@dimen/size_text_24dp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/fe_fu_white</item>
        <item name="android:fontFamily">@font/notosanscjkkr_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ButtonBlackStyle">
        <item name="android:textSize">@dimen/size_text_16dp</item>
        <item name="android:textColor">@color/fe_fu_black</item>
        <item name="android:fontFamily">@font/notosanscjkkr_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ButtonWhiteCenterStyle">
        <!--<item name="android:gravity">center_horizontal</item>-->
        <item name="android:textSize">@dimen/size_text_16dp</item>
        <item name="android:textColor">@color/fe_fu_white</item>
        <item name="android:fontFamily">@font/notosanscjkkr_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SubTitleBodyStyle">
        <item name="android:textSize">@dimen/size_text_20dp</item>
        <item name="android:textColor">@color/fe_fu_black</item>
        <item name="android:fontFamily">@font/notosanscjkkr_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SubTitleHeaderCenterStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/size_text_20dp</item>
        <item name="android:textColor">@color/fe_fu_black</item>
        <item name="android:fontFamily">@font/notosanscjkkr_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SubTitleHeaderStyle">
        <item name="android:textSize">@dimen/size_text_20dp</item>
        <item name="android:textColor">@color/fe_fu_black</item>
        <item name="android:fontFamily">@font/notosanscjkkr_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ButtonBlackCenterStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/size_text_16dp</item>
        <item name="android:textColor">@color/fe_fu_black</item>
        <item name="android:fontFamily">@font/notosanscjkkr_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SubTitleBodyCenterStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/size_text_20dp</item>
        <item name="android:textColor">@color/fe_fu_black</item>
        <item name="android:fontFamily">@font/notosanscjkkr_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="PlaceholderUnFillStyle">
        <item name="android:textSize">@dimen/size_text_16dp</item>
        <item name="android:textColor">@color/fe_fu_gray</item>
    </style>

    <style name="ButtonGrayCenterStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_text_16dp</item>
        <item name="android:textColor">@color/fe_fu_gray</item>
        <item name="android:fontFamily">@font/notosanscjkkr_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ContentsHeaderStyle">
        <item name="android:textSize">@dimen/size_text_14dp</item>
        <item name="android:textColor">@color/fe_fu_black</item>
    </style>

    <style name="ButtonMintCenterStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/size_text_16dp</item>
        <item name="android:textColor">@color/fe_fu_main</item>
    </style>

    <style name="ContentsBodyStyle">
        <item name="android:textSize">@dimen/size_text_14dp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">@color/fe_fu_body</item>
        <item name="android:fontFamily">@font/notosanscjkkr_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ContentsBodyCenterStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/size_text_14dp</item>
        <item name="android:textColor">@color/fe_fu_body</item>
        <item name="android:fontFamily">@font/notosanscjkkr_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ContentsBodyWhiteStyle">
        <item name="android:textSize">@dimen/size_text_14dp</item>
        <item name="android:textColor">@color/fe_fu_white</item>
        <item name="android:fontFamily">@font/notosanscjkkr_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ContentsHeaderMintCenterStyle2">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/size_text_14dp</item>
        <item name="android:textColor">@color/fe_fu_main</item>
        <item name="android:fontFamily">@font/notosanscjkkr_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="DetailContentsBodyStyle">
        <item name="android:textSize">@dimen/size_text_14dp</item>
        <item name="android:textColor">@color/fe_fu_black</item>
        <item name="android:fontFamily">@font/notosanscjkkr_bold</item>
    </style>

    <!--Edit text-->
    <style name="EditTextStyle">
        <item name="android:background">@drawable/selector_edit_text</item>
        <item name="android:theme">@style/PlaceholderUnFillStyle</item>
        <item name="android:textCursorDrawable">@color/fe_fu_main</item>
    </style>

    <!--Button-->
    <style name="ButtonStyle">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:theme">@style/ButtonWhiteCenterStyle</item>
        <item name="android:fontFamily">@font/notosanscjkkr_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/fe_fu_black</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/fe_fu_white</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>


    <!--Switch 버튼 커스텀 색상 지정.-->
    <style name="CustomSwitchTheme" parent="">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/fe_fu_main</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#bdbdbd</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#666666
        </item>
    </style>

    <style name="NonStatusBar" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>
