<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.sign.LoginActivity"
            android:background="@color/fefu_white">


        <TextView
                android:id="@+id/loginLogoImage"
                android:layout_width="92dp"
                android:layout_height="60dp"
                android:background="@color/fefu_main"
                android:text="로고"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintVertical_bias="0.137"/>

        <EditText
                android:id="@+id/loginEmailEt"
                android:layout_marginTop="@dimen/margin_56dp"
                android:layout_marginStart="@dimen/margin_24dp"
                android:layout_marginEnd="@dimen/margin_24dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/text_login_email"
                android:inputType="textEmailAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/loginLogoImage"
                style="@style/EditTextStyle"/>

        <EditText
                android:id="@+id/loginPasswordEt"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginStart="@dimen/margin_24dp"
                android:layout_marginEnd="@dimen/margin_24dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/text_login_password"
                android:inputType="textPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/loginEmailEt"
                style="@style/EditTextStyle"/>

        <Button
                android:id="@+id/loginButton"
                android:layout_marginTop="@dimen/margin_32dp"
                android:layout_marginStart="@dimen/margin_24dp"
                android:layout_marginEnd="@dimen/margin_24dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/text_login"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/loginPasswordEt"
                style="@style/ButtonStyle"/>

        <RelativeLayout
                android:id="@+id/loginLineLayout"
                android:layout_marginStart="@dimen/margin_24dp"
                android:layout_marginEnd="@dimen/margin_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_48dp"
                app:layout_constraintTop_toBottomOf="@id/loginButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <View
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:layout_width="140dp"
                    android:layout_height="1dp"
                    android:background="@color/fefu_gray"/>

            <TextView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/loginOrText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_or"
                    style="@style/PlaceholderUnFillStyle"/>

            <View
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_width="140dp"
                    android:layout_height="1dp"
                    android:background="@color/fefu_gray"/>

        </RelativeLayout>


        <LinearLayout
                android:id="@+id/loginGoogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@id/loginLineLayout"
                android:layout_marginEnd="@dimen/margin_48dp"
                android:layout_marginTop="@dimen/margin_48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/loginEmail"
                app:layout_constraintHorizontal_chainStyle="packed">
            <ImageView
                    android:id="@+id/loginGoogleImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/login_google_logo"
                    android:layout_gravity="center_horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintTop_toBottomOf="@id/loginLineLayout"
            />

            <TextView
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/text_google_login"
                    style="@style/ContentsBodyCenterStyle"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/loginEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/loginLineLayout"
                app:layout_constraintStart_toEndOf="@id/loginGoogle"
        >
            <ImageView
                    android:id="@+id/loginEmailImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/login_google_logo"
                    android:layout_gravity="center_horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintTop_toBottomOf="@id/loginLineLayout"
            />

            <TextView
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/text_email_login"
                    style="@style/ContentsBodyCenterStyle"
            />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
