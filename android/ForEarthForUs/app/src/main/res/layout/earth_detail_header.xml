<?xml version="1.0" encoding="utf-8"?>
<app.woovictory.forearthforus.util.CollapsibleToolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:minHeight="100dp"
        app:layoutDescription="@xml/motion_scene2"
        app:layout_scrollFlags="scroll|enterAlways|snap|exitUntilCollapsed">


    <androidx.appcompat.widget.Toolbar
            android:id="@+id/earthDetailToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>


    <ImageView
            android:id="@+id/background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/fefu_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="@id/earthDetailToolbar"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:id="@+id/earthDetailImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/earth_level_1"
            android:layout_marginTop="@dimen/margin_8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:id="@+id/earthDetailBarGraph"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/main_bar_graph2"
            app:layout_constraintTop_toBottomOf="@id/earthDetailImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


</app.woovictory.forearthforus.util.CollapsibleToolbar>
