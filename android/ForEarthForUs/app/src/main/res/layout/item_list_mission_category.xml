<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/border_item_list"
    >

        <ImageView
                android:id="@+id/itemMissionCategoryImage"
                android:layout_width="match_parent"
                android:layout_height="112dp"
        />


        <TextView
                android:id="@+id/itemMissionCategoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/text_mission_content_title"
                android:layout_marginStart="@dimen/margin_24dp"
                android:layout_marginBottom="@dimen/margin_22dp"
                android:layout_gravity="bottom"
                style="@style/ButtonBlackStyle"
        />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>